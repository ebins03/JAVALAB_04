<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab04.ListAppController">

    <TextField fx:id="nameField" promptText="Enter name" />

    <Button fx:id="addButton" onAction="#addButtonClicked" text="Add" />

    <Button fx:id="deleteButton" onAction="#deleteButtonClicked" text="Delete" />

    <ListView fx:id="listView" />

</VBox>
